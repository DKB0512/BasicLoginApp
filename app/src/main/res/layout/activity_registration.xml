<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistrationActivity">

    <ImageButton
            android:id="@+id/BackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/backarrow"
            android:background="@color/Transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/Register"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.117"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginStart="32dp"/>

    <TextView
            android:id="@+id/Registration"
            android:text="Registration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="50sp"
            android:fontFamily="@font/bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.132"
            android:layout_marginTop="108dp"
            android:layout_marginStart="16dp"/>

    <EditText
            android:id="@+id/FullName"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Full Name"
            android:background="@drawable/edittext"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"
            android:paddingStart="10sp"
            android:fontFamily="@font/medium"
            app:layout_constraintTop_toBottomOf="@+id/Registration"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.008"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.192"
            android:layout_marginStart="16dp"/>

    <EditText

            android:id="@+id/E-mail"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:fontFamily="@font/medium"
            android:background="@drawable/edittext"
            android:hint="E-mail Address"
            android:paddingStart="10sp"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/blue"
            android:textColor="@color/blue"
            android:ems="10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="320dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.186"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/FullName" app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="32dp"/>

    <EditText
            android:id="@+id/Password"
            android:layout_width="320dp"
            android:layout_height="48dp"
            android:fontFamily="@font/medium"
            android:inputType="textPassword"
            android:background="@drawable/edittext"
            android:hint="Password"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"
            android:paddingStart="10sp"
            android:ems="10"
            app:layout_constraintTop_toBottomOf="@+id/E-mail"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.173"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toTopOf="@+id/AlreadyMember"
            app:layout_constraintVertical_bias="0.0"/>

    <Button
            android:id="@+id/BtnRegister"
            android:text="Register"
            android:layout_width="224dp"
            android:layout_height="53dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:textSize="28sp"
            android:fontFamily="@font/bold"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Password"
            app:layout_constraintBottom_toTopOf="@+id/notmember"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.076"
            android:layout_marginStart="16dp"/>


    <TextView
            android:id="@+id/AlreadyMember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already a Member?"
            android:fontFamily="@font/bold"
            android:textSize="16sp"
            android:textColor="@color/blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>


    <TextView
            android:id="@+id/Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:fontFamily="@font/bold"
            android:textSize="16sp"
            android:textColor="@color/red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toEndOf="@+id/AlreadyMember"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="2dp"/>



</android.support.constraint.ConstraintLayout>


















