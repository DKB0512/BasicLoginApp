<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/MainLayout"
        tools:context=".MainActivity"
        android:background="@drawable/background">

    <TextView
            android:id="@+id/notmember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not a member?"
            android:fontFamily="@font/bold"
            android:textSize="16sp"
            android:textColor="@color/blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.992"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"/>


    <TextView
            android:id="@+id/Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:fontFamily="@font/bold"
            android:textSize="16sp"
            android:textColor="@color/red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.992"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/notmember"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginStart="1dp"
            android:layout_marginBottom="8dp"/>

    <TextView
            android:id="@+id/Welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/bold"
            android:text="Welcome!"
            android:textColor="@color/white"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.013"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.122" />

    <TextView
            android:id="@+id/Nicetoseeyou"
            android:text="Nice to see you"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medium"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.014"
            app:layout_constraintTop_toBottomOf="@+id/Welcome"
            android:alpha="0.5" app:layout_constraintBottom_toTopOf="@+id/notmember"
            app:layout_constraintVertical_bias="0.0" android:layout_marginStart="32dp"/>
    <Button
            android:id="@+id/BtnLogin"
            android:text="Login"
            android:transitionName="button"
            android:layout_width="144dp"
            android:layout_height="53dp"
            android:background="@drawable/button"
            android:gravity="center"
            android:textSize="28sp"
            android:fontFamily="@font/bold"
            android:textColor="@color/white"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@+id/Nicetoseeyou"
            app:layout_constraintBottom_toTopOf="@+id/notmember"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.012"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"/>

</android.support.constraint.ConstraintLayout>















